<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @profile.name %>
</p>

<p>
  <strong>Title:</strong>
  <%= @profile.title %>
</p>

<p>
  <strong>Maintainer:</strong>
  <%= @profile.maintainer %>
</p>

<p>
  <strong>Copyright:</strong>
  <%= @profile.copyright %>
</p>

<p>
  <strong>Copyright email:</strong>
  <%= @profile.copyright_email %>
</p>

<p>
  <strong>License:</strong>
  <%= @profile.license %>
</p>

<p>
  <strong>Summary:</strong>
  <%= @profile.summary %>
</p>

<p>
  <strong>Version:</strong>
  <%= @profile.version %>
</p>

<p>
  <strong>Sha256:</strong>
  <%= @profile.sha256 %>
</p>

<p>
  <strong>Depends:</strong>
  <%= @profile.depends %>
</p>

<p>
  <strong>Supports:</strong>
  <ul>
    <% @profile.supports.each do |support| %>
      <li><%= support.os_family %></li>
    <% end %>
  </ul>
  <%= link_to "Add Support", new_profile_support_path(@profile.id) %>
</p>

<p>
  <strong>Controls:</strong>
  <ul>
    <% @profile.controls.each do |control| %>
      <li><%= link_to control.control_id, profile_control_path(@profile.id, control.id) %></li>
    <% end %>
  </ul>
  <%= link_to "Add Control", new_profile_control_path(@profile.id) %>
</p>

<p>
  <strong>Groups:</strong>
  <ul>
    <% @profile.groups.each do |gr| %>
      <li><%= link_to gr.control_id, profile_group_path(@profile.id, gr.id) %></li>
    <% end %>
  </ul>
  <%= link_to "Add Group", new_profile_group_path(@profile.id) %>
</p>

<p>
  <strong>Attributes:</strong>
  <ul>
    <% @profile.profile_attributes.each do |pa| %>
      <li><%= link_to "#{pa.name}: #{pa.option_description}", profile_profile_attribute_path(@profile.id, pa.id) %></li>
    <% end %>
  </ul>
  <%= link_to "Add Attribute", new_profile_profile_attribute_path(@profile.id) %>
</p>

<%= link_to 'Edit', edit_profile_path(@profile) %> |
<%= link_to 'Back', profiles_path %>
